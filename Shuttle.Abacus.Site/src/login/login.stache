<cs-form elementClass:from="'w-50 mx-auto'">
    <fieldset class="form-group">
        <cs-form-input focus:from="'true'" label:from="'username'" vm:value:bind="username" vm:errors:from="errors()"
                       errorAttribute:from="'username'" vm:required:from="'true'" />
        <cs-form-input label:from="'password'" vm:value:bind="password" type:from="'password'" vm:errors:from="errors()"
                       errorAttribute:from="'password'"/>
        <cs-button vm:click:from="login" text:from="'sign-in'"/>
    </fieldset>
</cs-form>
